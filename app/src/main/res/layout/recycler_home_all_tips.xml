<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view2"
            android:layout_width="316dp"
            android:layout_height="197dp"
            android:background="@drawable/tips_from_locals_grid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView121tips"
            android:layout_width="299dp"
            android:layout_height="130dp"
            android:text="TextView"
            android:textColor="#1E1D1D"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.877" />

        <ImageView
            android:id="@+id/imageView121imgpic"
            android:layout_width="44dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView15name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Aydın"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/textView121tips"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.018"
            app:layout_constraintStart_toEndOf="@+id/imageView121imgpic"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView23last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Aydın"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/textView121tips"
            app:layout_constraintStart_toEndOf="@+id/textView15name"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView24count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Turkey"
            app:layout_constraintBottom_toTopOf="@+id/textView121tips"
            app:layout_constraintEnd_toEndOf="@+id/textView15name"
            app:layout_constraintHorizontal_bias="0.296"
            app:layout_constraintStart_toStartOf="@+id/textView15name"
            app:layout_constraintTop_toBottomOf="@+id/textView15name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView25city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kayseri"
            app:layout_constraintBottom_toBottomOf="@+id/textView24count"
            app:layout_constraintStart_toEndOf="@+id/textView24count"
            app:layout_constraintTop_toTopOf="@+id/textView24count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>