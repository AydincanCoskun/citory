<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/purple_500"
android:fillViewport="true"
tools:layout_editor_absoluteX="1dp"
tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/settingscolor"
        tools:context=".Fragment.CreateTripFragment">


        <Button
            android:id="@+id/button2"
            android:layout_width="225dp"
            android:layout_height="53dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/settingsbutton_"
            android:text="Get offers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="45dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Select destination"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Pick your trip themes"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView3" />

        <SearchView
            android:id="@+id/searchView3"
            android:layout_width="334dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/email_pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView37" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="373dp"
            android:layout_height="350dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/email_pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView41" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Date &amp; Time"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="373dp"
            android:layout_height="61dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/email_pass"
            android:gravity="start"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:text="Beginning Time: "
            android:textColor="#F8A014"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="373dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/email_pass"
            android:gravity="start"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:text="Number of people"
            android:textColor="#F8A014"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="105dp"
            android:layout_height="39dp"
            android:background="@drawable/color_radius"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/textView45"
            app:layout_constraintEnd_toEndOf="@+id/textView45"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintStart_toStartOf="@+id/textView45"
            app:layout_constraintTop_toTopOf="@+id/textView45" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Details"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView47" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="373dp"
            android:layout_height="205dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/email_pass"
            android:ems="10"
            android:gravity="start"
            android:hint="Details"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView49" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="53dp"
            android:layout_height="39dp"
            android:background="@drawable/color_radius"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/textView47"
            app:layout_constraintEnd_toEndOf="@+id/textView47"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="@+id/textView47"
            app:layout_constraintTop_toTopOf="@+id/textView47"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="447dp"
            android:layout_height="95dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView43">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckedTextView
                    android:id="@+id/checkedTextView6"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/enter"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:text="Entertainment"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkedTextView3" />

                <CheckedTextView
                    android:id="@+id/checkedTextView4"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/history"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingStart="38dp"
                    android:text="History"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/checkedTextView3"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckedTextView
                    android:id="@+id/checkedTextView3"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/nightlife"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingStart="33dp"
                    android:text="Nightlife"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckedTextView
                    android:id="@+id/checkedTextView7"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/nature"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingStart="38dp"
                    android:text="Nature"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toEndOf="@+id/checkedTextView6"
                    app:layout_constraintTop_toBottomOf="@+id/checkedTextView4" />

                <CheckedTextView
                    android:id="@+id/checkedTextView5"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/sport"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingStart="45dp"
                    android:text="Sport"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/checkedTextView6"
                    app:layout_constraintTop_toBottomOf="@+id/checkedTextView2"
                    app:layout_constraintVertical_bias="0.0" />

                <CheckedTextView
                    android:id="@+id/checkedTextView2"
                    android:layout_width="117dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/food_drink_color"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:text="Food&amp;Drink"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toStartOf="@+id/checkedTextView3"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/textView47"
            tools:layout_editor_absoluteX="107dp" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="196dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="302dp"
            android:layout_height="91dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/textView37"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView13"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>