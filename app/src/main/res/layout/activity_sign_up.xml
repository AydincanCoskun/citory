<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/settingscolor"
        tools:context=".SignUp">

        <EditText
            android:id="@+id/emailsngup"
            android:layout_width="370dp"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_pass"
            android:defaultFocusHighlightEnabled="true"
            android:hint="E-mail"
            android:paddingStart="14dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namesngup2" />

        <EditText
            android:id="@+id/namesngup"
            android:layout_width="370dp"
            android:layout_height="71dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/email_pass"
            android:drawablePadding="12dp"
            android:hint="Name "
            android:paddingStart="14dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <EditText
            android:id="@+id/namesngup2"
            android:layout_width="370dp"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_pass"
            android:drawablePadding="12dp"
            android:hint="Surname"
            android:paddingStart="14dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namesngup" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="145dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="33sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/email_pass"
            android:textColorHint="#000000"
            app:boxBackgroundColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#FFBA23">

            <EditText
                android:id="@+id/passsngup"
                android:layout_width="370dp"
                android:layout_height="71dp"
                android:hint="Password"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputt"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_pass"
            android:hint="Password again"

            android:textColorHint="#000000"
            app:boxBackgroundColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#FFBA23">

            <EditText
                android:id="@+id/passagain"
                android:layout_width="370dp"
                android:layout_height="71dp"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="356dp"
            android:layout_height="39dp"
            android:layout_marginTop="60dp"
            android:text="By clicking sign up, you accept the Terms and Conditions  and Privacy Policy "
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputt" />

        <Button
            android:id="@+id/button4"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:text="Sign up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@color/settingscolor"
            app:layout_constraintEnd_toStartOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_button" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="11dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:srcCompat="@drawable/line" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="11dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.933"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="or sign up with"
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="147dp"
            android:layout_height="84dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_pass"
            android:ems="10"
            android:hint="Date of birth (MM/DD/YY)"
            android:inputType="date"
            android:paddingStart="12dp"
            android:textColorHint="#020202"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailsngup" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="87dp"
            android:layout_height="65dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/namesngup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />


    </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>